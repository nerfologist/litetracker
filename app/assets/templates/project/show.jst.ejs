<div class="modal" id="storyDeletionModal" tabindex="-1" role="dialog" aria-labelledby="storyDeletionLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="storyDeletionLabel">Confirm deletion</h4>
      </div>
      <div class="modal-body">
        Really delete story?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-danger"
                id='btn-delete-story'>Delete</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" id="changeCapacityModal" tabindex="-1" role="dialog" aria-labelledby="changeCapacityLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="changeCapacityLabel">Set new capacity</h4>
      </div>
      <div class="modal-body">
          <input type="text" class="slider form-control" id='capacitySlider'
                 value="" data-slider-min="1"
                 data-slider-max="12" data-slider-step="1"
                 data-slider-value="<%= project.escape('capacity') %>"
                 data-slider-orientation="horizontal" data-slider-selection="after"
                 data-slider-tooltip="hide">
          <span id='capacity-value'><%= project.escape('capacity') %></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary"
                id='btn-set-capacity'>Confirm</button>
      </div>
    </div>
  </div>
</div>

